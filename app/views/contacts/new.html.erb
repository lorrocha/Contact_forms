<h2>Submit a Contact Inquiry</h2>

<%= form_for(@contact, html: { class: 'form-horizontal'}) do |f| %>

  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@contact.errors.count, "error") %> prohibited this entry from being saved:</h4>
      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :email, class: 'control-label'%>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :first_name, class: 'control-label'%>
    <div class="controls">
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :last_name, class: 'control-label'%>
    <div class="controls">
      <%= f.text_field :last_name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :subject, class: 'control-label'%>
    <div class="controls">
      <%= f.text_field :subject %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, class: 'control-label'%>
    <div class="controls">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Submit Inquiry', class: 'btn btn-primary' %>
    <%= link_to 'Back', contacts_path, class: 'btn' %>
  </div>

<% end %>
